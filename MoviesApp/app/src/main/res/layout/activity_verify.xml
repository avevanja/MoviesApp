<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color"
              android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"

        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_marginTop = "102dp"
        android:layout_weight="0.15"
        android:text="Congratulations! You registered succesfully! Now you should activate your account.
Check you email for activation code."
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_marginLeft="16dp"
        android:textColor="#ffffff"
        android:hint="activation code"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Activate"
        android:id="@+id/activate_btn"
        android:background="@drawable/ripple_btn_log"
        android:textColor="#ffffff"
        android:onClick="onClick1"
        android:layout_below="@+id/view2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="29dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp" />

</LinearLayout>